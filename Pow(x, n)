class Solution:
    def myPow(self, x: float, n: int) -> float:
        def helper(x, n):
            if n == 0:
                return 1
            if x == 0:
                return 0
            res = helper(x, n//2)
            res = res * res
            return x * res if n%2 else res
        result = helper(x, abs(n))
        
        if n < 0:
            return 1/result
        else:
            return result


time = o(log2n)
subscript 2
